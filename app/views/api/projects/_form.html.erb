<div class="row">
	<div class="col-xs-2"></div>
		
	<div class="col-xs-6">
		<form action="<%= api_projects_url %>" method="POST">
			<div class="form-group">
			<%= input_auth_token %>	
				<input type="hidden" name="method" value="<%= verb %>">
				
				<ol class="project-fields row">
					<li class= "project-title">
						<div class="grey-field">
							<div class="project-label">
								<label>Project title</label>
							</div>
							<div class="project-input">
								<input type="text" name="project[title]" value="<%= project.title %>" class="form-control">
								<p class="field-note">Your project title should be simple, specific, and memorable, and it should include the title of the creative project you're raising funds for. Avoid words like "help,” "support,” or "fund.”</p>
							</div>
						</div>
					</li>
	
					<li class="project-category">
						<div class="grey-field">
							<div class="project-label">
								<label>Category</label>
							</div>
							<div class="project-input">
								<select name="category[name]" class="form-control">
									<option></option>
									<% Project::CATEGORIES.each do |k, category| %>
										<option value="<%= k %>"><%= category %></option>
									<% end %>
								</select>
							</div>
						</div>
					</li>

					<li class="project-short-blurb">
						<div class="grey-field">
							<div class="project-label">
								<label>Short blurb</label>
							</div>
							<div class="project-input">
								<input type="textarea" name="project[short_blurb]" value="<%= project.short_blurb %>" class="form-control">
							</div>
						</div>
					</li>

					<li class="project-location">
						<div class="grey-field">
							<div class="project-label">
								<label>Project location</label>
							</div>
							<div class="project-input">
								<input type="text" name="project[project_location]" value="<%= project.project_location %>" class="form-control">
							</div>
						</div>
					</li>

					<li class="project-funding-duration">
						<div class="grey-field">
							<div class="project-label">
								<label>Funding duration</label>
							</div>
							<div class="project-input">
								<input 
									type="radio" 
									name="project[funding_duration]" 
									value="Number of days">
									Number of Days <input type="text" name="project[funding_duration]" class="form-control">
							</div>
						</div>
					</li>

					<li class="project-funding-goal">
						<div class="grey-field">
							<div class="project-label">
								<label>Funding goal</label>
							</div>
							<div class="project-input">
								<input type="text" name="project[funding_goal]" value="<%= project.funding_goal %>" class="form-control">
							</div>
						</div>
					</li>
				</ol>
	
	
				<input type="submit" class="btn btn-primary" value="<%= submit_btn_value %>" class="form-control">
	
				</div>
			</form>
	</div>
	
	<div class="preview-bar col-xs-3">
		<p>For Preview!</p><br>
		<p>Test</p>
	</div>
</div>